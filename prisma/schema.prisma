generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum TransactionType {
  INCOME       // Entradas (Salário, etc)
  OUTCOME      // Saídas (Contas, compras)
  INVESTMENT   // Investimentos (Ações, reserva, etc)
}

model Transaction {
  id          String   @id @default(uuid())
  description String
  amount      Float
  type        TransactionType
  category    String
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
